{
  "name": "pwa-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {    
    "build:contract": "node contract/compile.js",
    "build:contract:debug": "node contract/compile.js --debug",
    "dev:deploy:contract": "npm run build:contract && near dev-deploy && env-cmd -f ./neardev/dev-account.env node scripts/init.js",
    "dev:server": "env-cmd -f ./neardev/dev-account.env node server.js",
    "dev:web": "next dev",
    "deploy:contract": "near deploy",
    "deploy:server": "gcloud builds submit --tag gcr.io/vself-dev/wsserver",
    "build:web": "next build",
    "start:web": "next start",
    "lint:web": "next lint"
  },
  "dependencies": {
    "near-api-js": "^0.44.2",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "shelljs": "^0.8.4",
    "socket.io": "^4.4.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "@types/react": "17.0.37",
    "autoprefixer": "^10.4.0",
    "env-cmd": "^10.1.0",
    "eslint": "8.4.0",
    "eslint-config-next": "12.0.7",
    "postcss": "^8.4.4",
    "tailwindcss": "^2.2.19",
    "typescript": "4.5.2"
  }
}
